<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/lite_item_crime_title_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>
    <TextView
        android:id="@+id/lite_item_crime_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/lite_item_crime_title_check_box"
        android:padding="4dp"
        android:textStyle="bold"
        android:text="Crime_Titel"/>
    <TextView
        android:id="@+id/lite_item_crime_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/lite_item_crime_title_check_box"
        android:layout_below="@id/lite_item_crime_title_text_view"
        android:text="Crime date"
        android:padding="4dp"
        />
</RelativeLayout>
